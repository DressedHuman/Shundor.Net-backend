    "models": {
        "Product": {
            "description": "Main product model",
            "fields": {
                "id": "AutoField (primary key)",
                "name": "CharField (max 255)",
                "slug": "SlugField (unique, max 255)",
                "category": "ForeignKey to Category",
                "brand": "ForeignKey to Brand",
                "description": "TextField",
                "sku": "CharField (unique, max 100)",
                "old_price": "DecimalField (nullable)",
                "price": "DecimalField",
                "stock": "PositiveIntegerField",
                "sizes": "ManyToManyField to Size",
                "colors": "ManyToManyField to Color",
                "is_active": "BooleanField",
                "created_at": "DateTimeField (auto)",
                "updated_at": "DateTimeField (auto)"
            },
            "relationships": {
                "images": "One-to-Many with ProductImage",
                "reviews": "One-to-Many with Review",
                "cart_items": "One-to-Many with CartItem",
                "order_items": "One-to-Many with OrderItem"
            }
        },
        "ProductImage": {
            "description": "Product images (multiple per product)",
            "fields": {
                "id": "AutoField",
                "product": "ForeignKey to Product",
                "image": "ImageField",
                "alt_text": "CharField (max 255, nullable)",
                "is_primary": "BooleanField",
                "order": "PositiveIntegerField",
                "created_at": "DateTimeField (auto)"
            }
        },
        "Size": {
            "description": "Product size options",
            "fields": {
                "id": "AutoField",
                "name": "CharField (unique, max 50)",
                "code": "CharField (unique, max 10)",
                "order": "PositiveIntegerField",
                "is_active": "BooleanField",
                "created_at": "DateTimeField (auto)"
            }
        },
        "Color": {
            "description": "Product color options",
            "fields": {
                "id": "AutoField",
                "name": "CharField (unique, max 50)",
                "hex_code": "CharField (max 7, nullable)",
                "is_active": "BooleanField",
                "created_at": "DateTimeField (auto)"
            }
        },
        "Cart": {
            "description": "Shopping cart",
            "fields": {
                "id": "AutoField",
                "user": "ForeignKey to User (nullable)",
                "created_at": "DateTimeField (auto)"
            },
            "relationships": {
                "items": "One-to-Many with CartItem"
            }
        },
        "CartItem": {
            "description": "Items in shopping cart",
            "fields": {
                "id": "AutoField",
                "cart": "ForeignKey to Cart",
                "product": "ForeignKey to Product",
                "quantity": "PositiveIntegerField"
            },
            "unique_together": [
                "cart",
                "product"
            ]
        },
        "Order": {
            "description": "Customer orders",
            "fields": {
                "id": "AutoField",
                "user": "ForeignKey to User (nullable)",
                "status": "CharField (choices: pending/processing/shipped/delivered/cancelled)",
                "total_amount": "DecimalField",
                "shipping_address": "TextField",
                "customer_name": "CharField (nullable)",
                "customer_phone": "CharField (nullable)",
                "created_at": "DateTimeField (auto)",
                "updated_at": "DateTimeField (auto)"
            },
            "relationships": {
                "items": "One-to-Many with OrderItem"
            }
        },
        "OrderItem": {
            "description": "Items in an order",
            "fields": {
                "id": "AutoField",
                "order": "ForeignKey to Order",
                "product": "ForeignKey to Product",
                "quantity": "PositiveIntegerField",
                "price": "DecimalField"
            }
        },
        "Review": {
            "description": "Product reviews",
            "fields": {
                "id": "AutoField",
                "user": "ForeignKey to User",
                "product": "ForeignKey to Product",
                "rating": "IntegerField (1-5)",
                "comment": "TextField",
                "created_at": "DateTimeField (auto)"
            }
        },
        "Wishlist": {
            "description": "User wishlist items",
            "fields": {
                "id": "AutoField",
                "user": "ForeignKey to User",
                "product": "ForeignKey to Product"
            },
            "unique_together": [
                "user",
                "product"
            ]
        },
        "Brand": {
            "description": "Product brands",
            "fields": {
                "id": "AutoField",
